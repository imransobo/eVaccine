<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/unos_podataka_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ime"
        android:textColor="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/unos_podataka_dugme_dalje"
        android:layout_width="@dimen/dugme_sirina"
        android:layout_height="wrap_content"
        android:width="@dimen/dugme_sirina"
        android:hint="@string/dalje"
        android:text="@string/dalje"
        android:textColor="@color/white"
        android:textColorHighlight="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unos_podataka_telefon"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/unos_podataka_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Broj telefona"
        android:textColor="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unos_podataka_jmbg"
        app:layout_constraintVertical_bias="0.12" />

    <EditText
        android:id="@+id/unos_podataka_jmbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="JMBG"
        android:textColor="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unos_podataka_datum_rodjenja"
        app:layout_constraintVertical_bias="0.098" />

    <EditText
        android:id="@+id/unos_podataka_datum_rodjenja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="Datum roÄ‘enja"
        android:textColor="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unos_podataka_prezime"
        app:layout_constraintVertical_bias="0.076" />

    <EditText
        android:id="@+id/unos_podataka_prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Prezime"
        android:textColor="@color/tekst_boja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unos_podataka_ime"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/unos_podataka_naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unos_podataka_tekst"
        android:textColor="@color/tekst_boja"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/unos_podataka_ime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>